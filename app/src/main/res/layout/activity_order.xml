<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:onClick="Back"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="24dp"
                android:text="@string/orderform"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24dp"
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="24dp"
                android:text="Адрес *"
                android:textColor="@color/hintcolor"
                android:textSize="14dp"
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:padding="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/edittextstyle"
                android:textSize="15dp"
                android:textColorHint="@color/black"
                android:hint="Введите ваш адрес"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
            <TextView
                android:layout_marginTop="16dp"
                android:text="Дата и время *"
                android:textColor="@color/hintcolor"
                android:textSize="14dp"
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/edittextstyle"
                android:onClick="showDialog"
                android:textSize="15dp"
                android:textColorHint="@color/hintcolor"
                android:hint="Выберите дату и время"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
            <TextView
                android:layout_marginTop="32dp"
                android:text="Кто будет сдавать анализы? *"
                android:textColor="@color/hintcolor"
                android:textSize="14dp"
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:padding="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/edittextstyle"
                android:textSize="15dp"
                android:textColorHint="@color/hintcolor"
                android:hint="Выберите дату и время"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
            <TextView
                android:padding="14dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/addpatientstyle"
                android:textSize="15dp"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:text="@string/addpatient1"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
            <TextView
                android:layout_marginTop="32dp"
                android:text="Телефон *"
                android:textColor="@color/hintcolor"
                android:textSize="14dp"
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:padding="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/edittextstyle"
                android:textSize="15dp"
                android:textColorHint="@color/black"
                android:hint="+7 (967) 078-58-37"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
            <TextView
                android:layout_marginTop="16dp"
                android:text="Комментарий"
                android:textColor="@color/hintcolor"
                android:textSize="14dp"
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:padding="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/edittextstyle"
                android:textSize="15dp"
                android:textColorHint="@color/hintcolor"
                android:hint="Можете оставить свои пожелания"
                android:layout_width="match_parent"
                android:layout_height="128dp"/>
            <LinearLayout
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:background="@color/edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="24dp"
                    android:text="Оплата Google Pay"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:paddingLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="24dp"
                    android:text="Промокод"
                    android:textColor="@color/hintcolor"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:paddingLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="29dp"
                    android:text="анализ"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:paddingLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/btnNext"
                    android:textSize="17dp"
                    android:layout_marginBottom="32dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:text="Заказать"
                    android:padding="15dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:onClick="onClick1"
                    android:background="@drawable/enabledbutton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"/>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>