<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateCardPatient">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Создание карты пациента"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25dp"
            android:paddingLeft="20dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/skip"
            android:text="Пропустить"
            android:textColor="@color/blue"
            android:onClick="Skip"
            android:textSize="15dp"
            android:paddingLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp"
        android:text="Без карты пциента вы не сможете заказать анализы."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="15dp"
        android:paddingHorizontal="20dp"
        android:text="В картах пациентов будут храниться результаты анализов вас и ваших близких."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edittextstyle"
        android:textSize="15dp"
        android:textColorHint="@color/hintcolor"
        android:hint="Имя"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <EditText
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edittextstyle"
        android:textSize="15dp"
        android:textColorHint="@color/hintcolor"
        android:hint="Отчество"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <EditText
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edittextstyle"
        android:textSize="15dp"
        android:textColorHint="@color/hintcolor"
        android:hint="Фамилия"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <EditText
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edittextstyle"
        android:textSize="15dp"
        android:textColorHint="@color/hintcolor"
        android:hint="Дата рождения"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <Spinner
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edittextstyle"
        android:textSize="15dp"
        android:text="Пол"
        android:textColor="@color/hintcolor"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <Button
        android:textSize="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        android:text="Создать"
        android:textAllCaps="false"
        android:background="@drawable/buttonstyle"
        android:backgroundTint="@color/buttonuncolor"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>




</LinearLayout>